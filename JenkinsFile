pipeline { 
  agent any
  environment {
    RENDER_EMAIL = credentials('samson.kalume@student.moringaschool.com')
    RENDER_PASSWORD = credentials('Sa@ka@420N')
    RENDER_SERVICE_NAME = 'mygalleryapp'
  }
  tools { 
    nodejs "node"
  }
  stages { 
    stage('clone repository') {
      steps { 
        git 'https://github.com/SamsonKalume/gallery.git'
      }
    }
    stage('Build the project') {
      steps { 
        sh 'npm install'
      }
    }
    stage('Run Tests') {
      steps { 
        sh 'npm test'
      }
    }
    stage('Deploy to Render') {
      steps {
        withCredentials([string(credentialsId: 'render-email', variable: 'RENDER_EMAIL'), string(credentialsId: 'render-password', variable: 'RENDER_PASSWORD')]) {
          sh "curl -X POST -u ${env.RENDER_EMAIL}:${env.RENDER_PASSWORD} -d '{}' https://dashboard.render.com/api/service/${env.RENDER_SERVICE_NAME}/deploy"
        }
      }

  }
  post {
    success {
      slackSend color: 'good', message: 'Successfuly Deployed',tokenCredentialId:'tokencredentialid',channel: 'slacknotification'
    }
    failure {
      slackSend color: '#ff0000', message: "The Build has failed for stage: ${env.JOB_NAME} for build No: ${env.BUILD_NUMBER}",tokenCredentialId:'tokencredentialid',channel: 'slacknotification'
    }
  }
}


