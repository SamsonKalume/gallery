pipeline { 
  agent any
  tools { 
    nodejs "node"
  }
  stages { 
    stage('clone repository') {
      steps { 
        git 'https://github.com/SamsonKalume/gallery.git'
      }
    }
    stage('Build the project') {
      steps { 
        sh 'gradle build'
      }
    }
    stage('Tests') {
      steps { 
        sh 'gradle test'
      }
    }
  }
}


